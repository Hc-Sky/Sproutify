<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sproutify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Couleurs secondaires -->
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Couleurs de fond -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Statut bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Styles de texte -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Styles des composants -->
        <item name="materialCardViewStyle">@style/Widget.Sproutify.CardView</item>
        <item name="buttonStyle">@style/Widget.Sproutify.Button</item>
        <item name="textInputStyle">@style/Widget.Sproutify.TextInputLayout</item>
    </style>

    <style name="Theme.Sproutify.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style pour les cartes -->
    <style name="Widget.Sproutify.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Style pour les boutons -->
    <style name="Widget.Sproutify.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_light</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Style pour les champs de texte -->
    <style name="Widget.Sproutify.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_light</item>
        <item name="hintTextColor">@color/primary_light</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>
</resources>

